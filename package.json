{
  "name": "memoro-vault",
  "version": "1.0.8",
  "description": "A private, offline memory-based vault for securing digital assets.",
  "main": "main.js",
  "author": "Kasmaristo Delvakto <printandpray@proton.me>",
  "license": "GPL-3.0",
  "scripts": {
    "clean": "rimraf dist binaries vault-assets && mkdir dist && mkdir binaries && mkdir vault-assets",
    "clean:binaries": "rimraf binaries/* vault-assets/*",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build:win": "npm run clean && electron-builder --win",
    "build:linux": "npm run clean && electron-builder -l AppImage deb rpm",
    "build": "npm run build:win",
    "bundle-vault": "zip -r dist/vault.zip vault-assets",
    "checksum": "node scripts/generate-checksum.js",
    "postinstall": "node scripts/postinstall-check.js",
    "postbuild": "gpg --armor --detach-sign dist/memoro-vault.zip && gpg --armor --detach-sign dist/memoro-vault.exe && gpg --armor --detach-sign dist/memoro-vault.dmg && gpg --armor --detach-sign dist/memoro-vault.AppImage"
  },
  "build": {
    "appId": "com.memorovault.app",
    "productName": "Memoro Vault",
    "directories": {
      "output": "dist"
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "src/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "src/LICENSE",
      "src/LICENSE.txt",
      "src/license.html"
    ],
    "asar": true,
    "win": {
      "icon": "src/assets/memoro-vault.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "shortcutName": "Memoro Vault",
      "installerIcon": "src/assets/memoro-vault.ico",
      "uninstallerIcon": "src/assets/memoro-vault.ico",
      "installerHeaderIcon": "src/assets/memoro-vault.ico",
      "license": "src/LICENSE.txt"
    },
    "mac": {
      "icon": "src/assets/memoro-logo-white.png",
      "target": ["dmg"]
    },
    "linux": {
  "category": "Utility",
  "target": ["AppImage", "deb", "rpm"],
  "icon": "src/assets/memoro-vault.png",
  "vendor": "Kasmaristo Delvakto", 
  "maintainer": "Kasmaristo Delvakto <printandpray@proton.me>",
  "synopsis": "An offline, tamper-resistant vault for sensitive digital assets",
  "description": "Memoro Vault is a private, offline encryption tool designed for long-term storage of seed phrases, private keys, and personal data. It combines Argon2 key derivation with AES-GCM encryption. It is packaged in a self-contained application that never requires an internet connection.",
  "desktop": {
    "entry": {
    "Name": "Memoro Vault",
    "GenericName": "Offline Encrypted Storage",
    "Comment": "Offline vault for long-term secure storage",
    "X-AppStream-DeveloperName": "Kasmaristo Delvakto"
  }
}
},
"deb": {
  "depends": ["libgtk-3-0", "libxss1", "libnss3", "libasound2"]
},
"rpm": {
  "depends": ["gtk3", "libXScrnSaver", "nss", "alsa-lib"],
  "fpm": [
    "--vendor", "Kasmaristo Delvakto",
    "--maintainer", "Kasmaristo Delvakto <printandpray@proton.me>"
  ]
  }
},
  "devDependencies": {
    "@electron-forge/cli": "6.4.2",
    "@electron-forge/maker-deb": "6.4.2",
    "@electron-forge/maker-rpm": "6.4.2",
    "@electron-forge/maker-squirrel": "6.4.2",
    "@electron-forge/maker-zip": "6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "6.4.2",
    "@electron-forge/plugin-fuses": "6.4.2",
    "@electron/asar": "^3.2.10",
    "@electron/rebuild": "^3.6.0",
    "@electron/osx-sign": "^1.1.0",
    "@electron/notarize": "^2.3.0",
    "cpy-cli": "^5.0.0",
    "electron": "25.3.1",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.3",
    "argon2-browser": "^1.18.0",
    "buffer-crc32": "0.2.13",
    "cacheable-lookup": "5.0.4",
    "cacheable-request": "7.0.4",
    "clone-response": "1.0.3",
    "crystals-kyber": "^5.1.0",
    "debug": "4.4.0",
    "decompress-response": "6.0.0",
    "extract-zip": "2.0.1",
    "fs-extra": "^11.2.0",
    "global-agent": "3.0.0",
    "got": "11.8.6",
    "json-buffer": "3.0.1",
    "jsonfile": "^6.1.0",
    "lowercase-keys": "2.0.0",
    "progress": "2.0.3",
    "pump": "3.0.2",
    "snarkjs": "^0.7.5",
    "sumchecker": "3.0.1",
    "uglify-js": "^3.19.3",
    "yauzl": "2.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kasmaristo-Delvakto/memoro-vault.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/Kasmaristo-Delvakto/memoro-vault/issues"
  },
  "homepage": "https://github.com/Kasmaristo-Delvakto/memoro-vault#readme",
  "overrides": {
    "@electron/fuses": "1.x"
  }
}
